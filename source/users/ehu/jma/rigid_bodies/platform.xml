</Osejs.Model.Constraints.Page>
<Osejs.Model.Constraints.Page>
<Type>CODE_EDITOR</Type>
<Name>Motion</Name>
<Active>true</Active>
<Content>
<Comment><![CDATA[Update everything]]></Comment>
<Code><![CDATA[
x = (v0+.5*a*t)*t;	// Platform
v = v0+a*t;

omega0 = (V0-v0)/R;	// Angle evolution
omega = omega0-2.0/3.0*a*t/R;
phi = (omega0-1.0/3.0*a*t/R)*t;

V = V0+(v-v0)+R*(omega-omega0);	// Cylinder center-of-mass
if (!setInitial)
  X = X0+x+R*phi;
if (platform) {
  V -= v;
  X -= x;
}

if (nPoints == 0) {			// Radius
  xp[0] = X+R*Math.sin(phi);
  yp[0] = Y+R*Math.cos(phi);
}
else
for (int i = 0; i < nPoints; i++)  {                      	// Velocity fields
  double f = phi+PI2/nPoints*i;
  xp[i] = X+R*Math.sin(f);
  yp[i] = Y+R*Math.cos(f);
  up[i] = V+R*omega*Math.cos(f);
  vp[i] = -R*omega*Math.sin(f);
}
]]></Code>

</Content>
</Osejs.Model.Constraints.Page>
<Osejs.Model.Constraints.Page>
<Type>CODE_EDITOR</Type>
<Name>Velocities</Name>
<Active>true</Active>
<Content>
<Comment><![CDATA[Velocities of platform/floor]]></Comment>
<Code><![CDATA[
for (int i = 0; i < nVel; i++) {
  double xx = x+(xmax-xmin)/(nVel-1)*i;
  if (platform) xx = -xx;
  while (xx > xmax && xx+v*scaleV > xmax)  xx -= xmax-xmin;
  while (xx < xmin && xx+v*scaleV < xmin)  xx += xmax-xmin;
  xv[i] = xx; 
}
]]></Code>

</Content>
</Osejs.Model.Constraints.Page>
<Osejs.Model.Constraints.Page>
