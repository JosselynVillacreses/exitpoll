public void checkEvents() {
  boolean stop = false;
  if (Math.abs(t-t1) < 0.5*dt && !stopped1)
    stopped1 = stop = true;
  if (Math.abs(t-t2) < 0.5*dt && !stopped2)
    stopped2 = stop = true;
  if (Math.abs(t) < 0.5*dt && !stoppedd)
    stoppedd = stop = true;
  if (stop)
    _pause();
}
]]></Code>

</Content>
