<Name>Update values</Name>
<Active>true</Active>
<Content>
<Comment><![CDATA[Update values]]></Comment>
<Code><![CDATA[
public void update(double tt) {
  t = tt;		// Time  
  if (showRed) {		// S frame
    wr = 0.0;
    wg = beta*t;
    w0 = x0+beta*t;
    if (showLight) {
      w1 = w0-d/gamma;
      w2 = w0+d/gamma;
      u1 = xx0/gamma-t;
      u2 = xx0/gamma+t;
    }
    else {
      w1 = w0-d;
      w2 = w0+d;
      u1 = x0-(1.0-beta)*t;
      u2 = x0+(1.0+beta)*t;
    }
  }
  else {			// S' frame
    wr = -beta*t;
    wg = 0.0;
    w0 = x0;
    w1 = x1;
    w2 = x2;
    u1 = x0-t;
    u2 = x0+t;
  }
  xw = (showRed) ? ((showLight) ? x0 : xx0+beta*t) : xx0;  	// Wavefront center
  if (stopEvent) checkEvents(); 				// Event?
  if (wr < -xmax || wg > xmax) { 				// Out of screen -> stop
    stopped1 = stopped2 = stoppedd = false;
    _pause();
  }
}
]]></Code>

