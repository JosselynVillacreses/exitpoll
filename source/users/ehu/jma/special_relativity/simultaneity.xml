public void set_velocity() {
  // Velocity
  if (beta <= 0.0 || beta >= 1.0) beta = 0.6;

  // Lorentz factor
  gamma = (showLight) ? 1.0/Math.sqrt(1-beta*beta) : 1.0;

  // alpha angle os simultaneity plane
  sina = beta;
  if (!showRed) sina = -sina;
  cosa = 1.0/Math.sqrt(1.0+sina*sina);
  sina *= cosa;
  sina *= 4.0;
  cosa *= 4.0;
}
]]></Code>

</Content>
</Osejs.Model.Library.Page>
<Osejs.Model.Library.Page>
