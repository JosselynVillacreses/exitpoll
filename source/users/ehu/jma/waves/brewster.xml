<Osejs.Model.Constraints.Page>
<Type>CODE_EDITOR</Type>
<Name>Snell</Name>
<Active>true</Active>
<Content>
<Comment><![CDATA[Snell's law]]></Comment>
<Code><![CDATA[
thetai = Math.toRadians(thetaiDegrees);
csi = Math.cos(thetai);
sni = Math.sin(thetai); 

snr = Math.sin(thetai)/n2;
if (snr > 1.0) {
  snr = 1.0;
  totalReflection = true;
}
else
  totalReflection = false;
thetar = Math.asin(snr);
csr = Math.cos(thetar);
thetarDegrees = Math.toDegrees(thetar);


]]></Code>

</Content>
</Osejs.Model.Constraints.Page>
<Osejs.Model.Constraints.Page>
<Type>CODE_EDITOR</Type>
<Name>Incident wave</Name>
<Active>true</Active>
<Content>
<Comment><![CDATA[Compute incident field]]></Comment>
<Code><![CDATA[
double dx = length/N, 
       s  = -length,
       EEpar, EEper;

for (int i = 0; i < N; i++, s += dx) {
  yi[i] = s*sni;
  zi[i] = -s*csi;
  EEpar = Epar*Math.cos(k*(s-t));
  EEper = Eper*Math.cos(k*(s-t)+delta);
  Eix[i] = EEper;
  Eiy[i] = EEpar*csi;
  Eiz[i] = EEpar*sni;
}

]]></Code>

</Content>
</Osejs.Model.Constraints.Page>
<Osejs.Model.Constraints.Page>
<Type>CODE_EDITOR</Type>
<Name>Reflected wave</Name>
<Active>true</Active>
<Content>
<Comment><![CDATA[Compute reflected wave]]></Comment>
<Code><![CDATA[
if (totalReflection) {
double dx = length/N, 
       s  = dx,
       alpha, beta,gamma,
       phipar, phiper,
       EEpar, EEper;

alpha = -n2*n2*csi; 
beta = Math.sqrt(sni*sni-n2*n2);
gamma = csi;
phipar = Math.atan2(-2.0*alpha*beta,alpha*alpha-beta*beta);
beta = -beta;
phiper = Math.atan2(-2.0*gamma*beta,gamma*gamma-beta*beta);
for (int i = 0; i < N; i++, s += dx) {
  yf[i] = s*sni;
  zf[i] = s*csi;
  EEpar = Epar*Math.cos(k*(s-t)+phipar);
  EEper = Eper*Math.cos(k*(s-t)+phiper+delta);
  Efx[i] = EEper;
  Efy[i] = EEpar*csi;
  Efz[i] = -EEpar*sni;
}
}
else {
double dx = length/N, 
       s  = dx,
       Epar0, Eper0,
       EEpar, EEper;

Epar0 = Epar*(csr-n2*csi)/(csr+n2*csi);
Eper0 = Eper*(csi-n2*csr)/(csi+n2*csr);
for (int i = 0; i < N; i++, s += dx) {
  yf[i] = s*sni;
  zf[i] = s*csi;
  EEpar = Epar0*Math.cos(k*(s-t));
  EEper = Eper0*Math.cos(k*(s-t)+delta);
  Efx[i] = EEper;
  Efy[i] = EEpar*csi;
  Efz[i] = -EEpar*sni;
}
}

]]></Code>

</Content>
</Osejs.Model.Constraints.Page>
<Osejs.Model.Constraints.Page>
<Type>CODE_EDITOR</Type>
<Name>Refracted wave</Name>
<Active>true</Active>
<Content>
<Comment><![CDATA[Compute refracted wave]]></Comment>
<Code><![CDATA[
if (!totalReflection) {
double dx = length/N, 
       s  = dx,
       Epar0, Eper0,
       EEpar, EEper;

Epar0 = Epar*(2.*csi)/(csr+n2*csi);
Eper0 = Eper*(2.*csi)/(csi+n2*csr);
for (int i = 0; i < N; i++, s += dx) {
  yr[i] = s*snr;
  zr[i] = -s*csr;
  EEpar = Epar0*Math.cos(k*(s-t));
  EEper = Eper0*Math.cos(k*(s-t)+delta);
  Erx[i] = EEper;
  Ery[i] = EEpar*csr;
  Erz[i] = EEpar*snr;
}
