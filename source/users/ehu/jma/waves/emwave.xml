else if (xp < x1) xp = x1;

point = (int)((xp-x1)/dx);			// Point number
if (point < 0) point = 0;
else if (point >= N) point = N;

xp = x1+point*dx;				// Point position
yp = zp = 0.0;
]]></Code>

