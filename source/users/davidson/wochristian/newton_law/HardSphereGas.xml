  vy[i]=-0.5+Math.random();
  vz[i]=-0.5+Math.random();
  xi += 1.5*diameter;
  if(xi+diameter>cellSize){
   xi = diameter;
   yi += 1.5*diameter;
   if(yi+diameter>cellSize){
     xi = diameter;
